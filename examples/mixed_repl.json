{
    "configuration_title": "Mixed Version/OS Replica Set",

    "instances": [
        {
            "_id": "repl_windows",

            "__comment__": "Windows 2008 SP2 server",
            "ami": "ami-c287ba87",

            "mongo" : {
                "bin": "mongod",
                "options": "--replSet mongolaunch_demo --logappend --noprealloc --nojournal",
                "version": "2.6.0-rc1"
            }
        },
        {
            "_id": "repl_linux_0",

            "__comment__": "Amazon linux",
            "ami": "ami-a43909e1",

            "mongo" : {
                "bin": "mongod",
                "options": "--replSet mongolaunch_demo --noprealloc --nojournal",
                "version": "2.6.0-rc1"
            }
        },
        {
            "_id": "repl_linux_1",

            "__comment__": "Amazon linux",
            "ami": "ami-a43909e1",

            "mongo" : {
                "bin": "mongod",
                "options": "--replSet mongolaunch_demo --noprealloc --nojournal",
                "version": "2.4.9"
            }
        }

    ],

    "__comment__": "Description of non-standalone MongoDB configurations",
    "clusters": [
        {
            "_id": "mongolaunch_demo",
            
            "__comment__": "valid values here are replicaSet or shardedCluster",
            "type": "replicaSet",

            "__comment__": "should be list of _ids of instances/clusters described elsewhere",
            "members": ["repl_windows", "repl_linux_0", "repl_linux_1"],

            "__comment__": "name is required for replicaSet and should match --replSet",
            "name": "mongolaunch_demo"
        }
    ]
}
