{
    "configuration_title": "Simple sharded example",

    "instances": [
        {
            "__comment__": "This _id is used to describe this shard in the \"clusters\" section below",
            "_id": "shard_0",

            "__comment__": "Amazon linux",
            "ami": "ami-a43909e1",

            "mongo" : {
                "bin": "mongod",
                "options": "--noprealloc --nojournal",
                "version": "2.4.9"
            }
        },
        {
            "__comment__": "This _id is used to describe which instance holds the mongos below",
            "_id": "mongos_0",

            "ami": "ami-a43909e1",
            "mongo": {
                "bin": "mongos",
                "options": "",
                "version": "2.4.9"
            }
        }
    ],

    "__comment__": "Description of non-standalone MongoDB configurations",
    "clusters": [
        {
            "type": "shardedCluster",

            "__comment__": "This uses the _id of the first instance",
            "members": ["shard_0"],
            "mongos": "mongos_0"
        }
    ]
}
